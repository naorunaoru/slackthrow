.spinner
  span
    font-size 50px
    color #ccc
    position absolute
    left 50%
    top 50%
    margin-left -25px
    margin-top -25px
    -webkit-animation spin 1s infinite linear
    animation spin 1s infinite linear
    &:before
      position relative
      top 1px

@keyframes spin
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)

  100%
    -webkit-transform: rotate(359deg)
    transform: rotate(359deg)
