#player
  width 400px
  float right
  line-height 50px
  color #789
  position relative
  padding-left 40px

  .nowplaying
    display block
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  control
    font-family 'Glyphicons Halflings'
    font-size 30px
    line-height 20px
    cursor pointer
    position absolute
    left 0
    top 50%
    margin-top -10px
    &:after
      content "\e073"

    &.paused
      &:after
        content "\e072"
